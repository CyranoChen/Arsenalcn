@model Arsenal.Mobile.Models.RegisterModel

@{
    ViewBag.Title = "用户注册";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).on("pageinit", function () {
            $("#btnRegister").click(function () {
                if ($("#formRegister").valid()) {
                    document.forms["formRegister"].submit();
                }
            });
        });
    </script>
}

<div data-role="content">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "formRegister" }))
    {
        <ul data-role="listview" data-inset="true">
            <li data-role="list-divider">密码至少 7 位</li>
            <li data-role="fieldcontain">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li data-role="fieldcontain">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @type = "email" })
            </li>
            <li data-role="fieldcontain">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li data-role="fieldcontain">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
            <li>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
            </li>
        </ul>
        <input type="button" id="btnRegister" value="注册" data-icon="check" />
    }
</div>