@using Arsenal.Service
@{
    ViewBag.Title = "ArsenalCN Mobile Portal";
}

@section Footer {
    <div data-role="footer" data-position="fixed">
        @Html.Action("_AssemblyPartial")
    </div>
}

<div data-role="content">
    <ul data-role="listview" data-inset="true">
        <li data-role="list-divider">
            博彩系统 (与ACN论坛同步)
            <span class="ui-li-count">Arsenalcn.Casino</span>
        </li>
        <li>@Html.ActionLink("可投注比赛", "Index", "Casino", null, new { data_transition = "slide" })</li>
        <li>@Html.ActionLink("比分投注单", "MyCoupon", "Casino", null, new { data_transition = "slide" })</li>
        <li>@Html.ActionLink("比赛结果查询", "Result", "Casino", null, new { data_transition = "slide" })</li>
        <li>@Html.ActionLink("我的投注记录", "MyBet", "Casino", null, new { data_transition = "slide" })</li>
        <li>@Html.ActionLink("我的盈亏记录", "MyBonus", "Casino", null, new { data_transition = "slide" })</li>
        <li data-role="list-divider">
            球会系统 (与ACN论坛同步)
            <span class="ui-li-count">Arsenalcn.Club</span>
        </li>
        <li>@Html.ActionLink("每日签到", "SignInDaily", "Club", null, new { data_rel = "dialog", data_transition = "pop" })</li>
        <li>@Html.ActionLink("球星卡", "About", "Home", null, new { data_transition = "slide" })</li>
        <li>@Html.ActionLink("视频卡", "Contact", "Home", null, new { data_transition = "slide" })</li>
        <li data-role="list-divider">
            球迷会服务中心
            <span class="ui-li-count">iArsenal.com</span>
        <li>@Html.ActionLink("会员信息", "About", "Home", null, new { data_transition = "slide" })</li>
        <li>@Html.ActionLink("订单查询", "About", "Home", null, new { data_transition = "slide" })</li>
        <li>@Html.ActionLink("球衣预订", "Contact", "Home", null, new { data_transition = "slide" })</li>
        <li>@Html.ActionLink("主场球票", "Contact", "Home", null, new { data_transition = "slide" })</li>
        <li>@Html.ActionLink("官方商品", "Contact", "Home", null, new { data_transition = "slide" })</li>
    </ul>
</div>