@model Arsenal.Mobile.Models.Casino.MatchDto

<fieldset data-role="controlgroup" style="text-align:center; margin: 0 auto">
    <p>@Model.LeagueName</p>
    <div class="ui-grid-d">
        <div class="ui-block-a" style="width: 30%; text-align: right">
            <h2>
                @Model.TeamHomeName
            </h2>
        </div>
        <div class="ui-block-b" style="width: 10%; text-align: right">
            <img src="http://bbs.arsenalcn.com/plugin/acncasino/@Model.TeamHomeLogo" style="width: 32px; height: 32px;" />
        </div>
        <div class="ui-block-c" style="width: 20%;  text-align: center">
            @if (Model.ResultHome.HasValue && Model.ResultAway.HasValue)
            {
                <span style="font-size: 22px; font-weight: bolder">@Model.ResultHome.Value</span>
                <span style="font-size: 18px; font-weight: bolder; margin: 0 5px">vs</span>
                <span style="font-size: 22px; font-weight: bolder">@Model.ResultAway.Value</span>
            }
            else
            {
                <span style="font-size: 18px; font-family: Tahoma; font-weight: bolder">vs</span>
            }
        </div>
        <div class="ui-block-d" style="width: 10%; text-align: left">
            <img src="http://bbs.arsenalcn.com/plugin/acncasino/@Model.TeamAwayLogo" style="width: 32px; height: 32px;" />
        </div>
        <div class="ui-block-e" style="width: 30%; text-align: left">
            <h2>
                @Model.TeamAwayName
            </h2>
        </div>
    </div>
    <p>@Model.PlayTime.ToString("yyyy-MM-dd HH:mm")</p>
</fieldset>
