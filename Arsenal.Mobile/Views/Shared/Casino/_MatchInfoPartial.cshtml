@model Arsenal.Mobile.Models.Casino.MatchDto

<fieldset data-role="controlgroup">
    <div class="ui-grid-b">
        <div class="ui-block-a" style="text-align: center">
            <img src="http://bbs.arsenalcn.com/plugin/acncasino/@Model.TeamHomeLogo" />
            <h2>@Model.TeamHomeName</h2>
        </div>
        <div class="ui-block-b" style="text-align: center">
            <p>@Model.LeagueName</p>
            @if (Model.ResultHome.HasValue && Model.ResultAway.HasValue)
            {
                <p>
                    <span style="font-size: 30px; font-weight: bolder">@Model.ResultHome.Value</span>
                    <span style="font-size: 20px; font-weight: bolder; margin: 0 10px">vs</span>
                    <span style="font-size: 30px; font-weight: bolder">@Model.ResultAway.Value</span>
                </p>
            }
            else
            {
                <p style="font-size: 20px; font-family: Tahoma; font-weight: bolder">vs</p>
            }
            <p>@Model.PlayTime.ToString("yyyy-MM-dd HH:mm")</p>
        </div>
        <div class="ui-block-c" style="text-align: center">
            <img src="http://bbs.arsenalcn.com/plugin/acncasino/@Model.TeamAwayLogo" />
            <h2>@Model.TeamAwayName</h2>
        </div>
    </div>

    @if (Model.HomeRate > 0 && Model.DrawRate > 0 && Model.AwayRate > 0)
    {
        <div class="ui-grid-b">
            <div class="ui-block-a" style="text-align: center">
                @Model.HomeRate.ToString("f2")
            </div>
            <div class="ui-block-b" style="text-align: center">
                @Model.DrawRate.ToString("f2")
            </div>
            <div class="ui-block-c" style="text-align: center">
                @Model.AwayRate.ToString("f2")
            </div>
        </div>
    }
</fieldset>