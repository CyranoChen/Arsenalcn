@using Arsenal.Mobile.Models
@{
    var authorizedUser = UserDto.GetSession();
}

@if (Request.IsAuthenticated && authorizedUser != null)
{
    @Html.ActionLink(string.Format("{0} ({1})", User.Identity.Name, authorizedUser.AcnID),
        "Index", "Account", null, new {data_icon = "gear", data_transition = "slideup"})
}
else
{
    @Html.ActionLink("登录", "Login", "Account", null, new {data_icon = "gear", data_transition = "slidedown"})
}