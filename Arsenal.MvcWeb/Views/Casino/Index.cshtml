@model IEnumerable<Arsenal.MvcWeb.Models.Casino.MatchWithRateDto>
@{
    ViewBag.Title = "可投注比赛";
}
<div data-role="content">
    <h2>可投注比赛</h2>
    <p>
        Description
    </p>
    <ul data-role="listview" data-inset="true">
        <li data-role="list-divider">
            您可投注即将于 @ViewBag.CasinoValidDays 天内开始的比赛
            <span class="ui-li-count">@Model.Count()</span>
        </li>
        @if (Model != null && Model.Count() > 0)
        {
            foreach (var m in Model)
            {
                <li>
                    <a data-transition="slide" href="@Url.Action("GameBet", "Casino", new { id = m.MatchGuid.ToString() })">
                        @Html.Partial("Casino/_MatchInfoPartial", m)
                    </a>
                </li>
            }
        }
    </ul>
</div>