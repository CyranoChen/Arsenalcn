@model Arsenal.MvcWeb.Models.Casino.MatchResultDto
@{
    ViewBag.Title = "猜比分";
}

@section Scripts {
    <style type="text/css">
        .match-versus {
            text-align: center;
        }

            .match-versus div.ui-input-text {
                width: 40px;
                display: inline-block;
                text-align: center;
            }

            .match-versus span {
                padding: 5px;
            }
    </style>
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            $("#btnSubmit").click(function () {
                if ($("#formGameBet").valid()) {
                    document.forms["formGameBet"].submit();
                }
            });
        });
    </script>
}
@section Header {
    <div data-role="header">
        <h1 style="overflow: visible">
            <span>@Model.Match.TeamHomeName</span>
            <span> vs </span>
            <span>@Model.Match.TeamAwayName</span>
        </h1>
    </div>
}
@section Footer {
    <div data-role="footer" style="text-align: center">
        <input type="button" id="btnSubmit" value="提交投注" />
    </div>
}
<div data-role="content">
    @using (Html.BeginForm("MatchResult", "Casino", FormMethod.Post, new { id = "formGameBet" }))
    {
        <fieldset data-role="controlgroup">
            <div class="ui-grid-b">
                <div class="ui-block-a" style="text-align: center">
                    <img src="http://bbs.arsenalcn.com/plugin/acncasino/@Model.Match.TeamHomeLogo" />
                    <h2>@Model.Match.TeamHomeName</h2>
                </div>
                <div class="ui-block-b match-versus">
                    <p>@Model.Match.LeagueName</p>
                    <p>
                        @Html.TextBoxFor(m => m.ResultHome)
                        <span>vs</span>
                        @Html.TextBoxFor(m => m.ResultAway)
                    </p>
                    <p>@Model.Match.PlayTime.ToString("yyyy-MM-dd HH:mm")</p>
                </div>
                <div class="ui-block-c" style="text-align: center">
                    <img src="http://bbs.arsenalcn.com/plugin/acncasino/@Model.Match.TeamAwayLogo" />
                    <h2>@Model.Match.TeamAwayName</h2>
                </div>
            </div>
        </fieldset>

        @Html.HiddenFor(m => m.MatchGuid)
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
    }
</div>