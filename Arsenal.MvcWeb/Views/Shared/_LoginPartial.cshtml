@{
    var authorizedUser = Arsenal.MvcWeb.Models.UserDto.GetSession();
}

@if (Request.IsAuthenticated && authorizedUser != null)
{
    @Html.ActionLink(string.Format("{0} ({1})", User.Identity.Name, authorizedUser.AcnID),
    "Index", "Account", routeValues: null, htmlAttributes: new { data_icon = "gear", data_transition = "slideup" })
}
else
{
    @Html.ActionLink("登录", "Login", "Account", routeValues: null, htmlAttributes: new { data_icon = "gear", data_transition = "slidedown" })
}
