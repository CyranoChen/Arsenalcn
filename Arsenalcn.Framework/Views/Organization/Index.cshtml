@model IEnumerable<Arsenalcn.Framework.Models.Organization>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.TextBox("where")
        <input type="submit" value="Search" class="btn btn-default" />
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { order = ViewBag.ParaSortName })
        </th>
        <th>
            @Html.ActionLink("CreateTime", "Index", new { order = ViewBag.ParaSortCreateTime })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(i => item.Name)
            </td>
            <td>
                @Html.DisplayFor(i => item.CreateTime)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
